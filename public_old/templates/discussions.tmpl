<html lang="en">
  <head>
    <link rel="stylesheet" href="/public/styles/public.css" />
  </head>
  <h1>the_cookie_jar</h1>

  <h2>
    {{ .title }}
  </h2>
  <hr />
  <h3>
    {{ .sub_title }}
  </h3>
  <b style="color: rgb(208, 76, 10)">
    {{ .body }}
  </b>
  {{ if .new_board }}
  <form action="/classrooms/{{ .classroom_id }}/discussions/new" method="post">
    <label for="name">New Discussion:</label><br />
    <input type="text" id="name" name="name" required /><br />

    <button type="submit">Create</button>
  </form>
  {{
    end
  }}

  <ul>
    {{
      range.routes
    }}
    <li>
      <a
        href="{{ .Path }}"
        method="{{ .Method }}"
        style="color: white; text-decoration: none; font-family: monospace"
        >{{ .Method }} {{ .Path }}</a
      >
    </li>
    {{
      end
    }}
  </ul>
</html>
